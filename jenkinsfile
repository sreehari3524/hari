pipeline {
    agent any

    stages 
    {
        stage('Build') 
        {
            steps 
            {
                echo 'Build App'
            }
        }
        stage('Test') 
        {
            steps 
            {
                echo 'Test App'
            }
        }

        stage('Deploy') 
        {
            steps 
            {
                echo 'Deploy App'
            }
         }
      }
      post
      {
     
          always
         {
              emailtext body: 'summary',subject: 'pipeline status',to: 'selenium@gmail.com'
         }
     }
}
